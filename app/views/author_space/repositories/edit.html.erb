<h1>
  <%= "Edit Repository ##{@repository.id}" %>
</h1> 

<%= button_to 'Rebuilt Repository', repository_path(@repository), method: :patch %>
<%= button_to 'Delete Repository',
               author_repository_path(@repository),
               method: :delete,
               form: { data: { turbo_confirm: 'Are you sure?' } } %>
<br />

<%= render 'edit_form', repository: @repository %>

<br />
<%= link_to 'Back to repositories', author_repositories_path %>
